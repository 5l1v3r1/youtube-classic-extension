{
  "manifest_version": 2,
  "name": "YouTube Classic",
  "version": "1.3",
  "description": "Restore Classic YouTube!",
  "permissions": [
    "storage",
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "*://www.youtube.com/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "run_at": "document_start",
      "css": ["contentScript.css"],
      "js": ["contentScript.js"]
    }
  ],
  "browser_action": {
    "default_icon": {
      "16": "images/yt_classic16.png",
      "32": "images/yt_classic32.png",
      "48": "images/yt_classic48.png",
      "128": "images/yt_classic128.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "images/yt_classic16.png",
    "32": "images/yt_classic32.png",
    "48": "images/yt_classic48.png",
    "128": "images/yt_classic128.png"
  }
}
